<!-- Single Page Header start -->
<div class="container-fluid page-header py-5">
    <h1 class="text-center text-white display-6">Checkout</h1>
    <ol class="breadcrumb justify-content-center mb-0">
        <li class="breadcrumb-item"><a href="#">Home</a></li>
        <li class="breadcrumb-item"><a href="#">Pages</a></li>
        <li class="breadcrumb-item active text-white">Checkout</li>
    </ol>
</div>

<!-- Single Page Header End -->

<!-- Minimal Coupon Entry Page Start -->
<div class="container-fluid py-5">
    <div class="container py-5">
        <h1 class="mb-4">Payment Page</h1>

        <form action="/payments/process" method="POST" id="couponForm">
            <div class="row g-5 justify-content-center">
                <div class="col-md-12 col-lg-8 col-xl-6">

                    <!-- Show total before discount -->
                    <div class="form-item my-3">
                        <label class="form-label text-dark">Total Amount</label>
                        <p class="form-control-plaintext fw-bold">â‚¦<%= amount %>.00</p>
                        <input type="hidden" name="amount" value="<%= amount %>">
                    </div>

                    <!-- Discount Code Input -->
                    <div class="form-item my-3">
                        <label class="form-label text-dark">Enter a valid coupon code</label>
                        <input type="text" class="form-control" name="discountCode" placeholder="e.g. SAVE20">
                    </div>

                    <!-- Continue Button -->
                    <div class="form-item mt-4">
                        <button type="submit" class="btn border-secondary py-3 px-4 text-uppercase w-100 text-primary">
                            Proceed To Checkout
                        </button>
                    </div>

                </div>
            </div>
        </form>
    </div>
</div>
<!-- Minimal Coupon Entry Page End -->