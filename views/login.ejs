
 <div class="container py-5">
         <div style="margin-top:40px">
             <p style="color:white">
                 Arsenal receive Myles Lewis-Skelly referee red card appeal verdict after 'major' Michael Oliver error

             </p>
         </div>
  <div class="row justify-content-center">
    <div class="col-md-6 col-lg-4">
      
      <div class="card shadow">
        <div class="card-body">
          <!-- Form Heading -->
          <h5 class="card-title text-center mb-3">
        
              Login To Your Foodliie Account
            
              
          </h5>

          <!-- Form -->
          <form action='/login'  method="POST">
            <div class="mb-3">
              <label for="email" class="form-label">Email</label>
              <input
                type="email"
                class="form-control shadow-sm"
                id="email"
                name="email"
                required
                placeholder="Enter your email"
              >
            </div>
            
              
            
            <div class="mb-3">
              <label for="password" class="form-label">Password</label>
              <input
                type="password"
                class="form-control shadow-sm"
                id="password"
                name="password"
                required
                placeholder="Enter your password"
              >
            </div>

            <!-- Google Sign-in Button -->
       <form id="googleLoginForm" action="/auth/google" method="POST">
 <input type="hidden" name="token" id="googleToken" />
            <div class="text-center mb-3">
              <button id="googleSignIn" class="btn btn-outline-primary w-100 shadow-sm">
                <i class="bi bi-google"></i> Sign in with Google
              </button>
            </div>

            <!-- Submit Button -->
            <div class="text-center">
              <button class="btn btn-success w-100 shadow-sm" id="submitBtn" type="submit">
                Sign in 
              </button>
              <p>Don't have an account?
              <a href="/register">Sign Up</a>
              </p>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

script>
    function handleCredentialResponse(response) {
      // Set the token inside the form
      document.getElementById('googleToken').value = response.credential;
      // Submit the form
      document.getElementById('googleLoginForm').submit();
    }

    window.onload = function () {
      google.accounts.id.initialize({
        client_id: "YOUR_GOOGLE_CLIENT_ID",
        callback: handleCredentialResponse
      });
      google.accounts.id.renderButton(
        document.getElementById("googleSignIn"),
        { theme: "outline", size: "large" }
      );
    };
  </script>
